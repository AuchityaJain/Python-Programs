def operation(my_tuple):
    even_sum = 0
    odd_sum = 0

    for i in my_tuple:
        if i % 2 == 0:
            even_sum += i
        else:
            odd_sum += i
    return even_sum, odd_sum

my_tuple = (20, 5, 70, 9, 100)
even_sum, odd_sum = operation(my_tuple)

print("Sum of odd numbers :", odd_sum)
print("Sum of even numbers :", even_sum)
